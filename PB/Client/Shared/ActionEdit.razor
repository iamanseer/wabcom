
@if(!string.IsNullOrEmpty(RoleName))
{
    <AuthorizeView Roles="@(RoleName+"Edit")" Context="C">
        <button type="button" class="btn" @onclick="async()=>await Clicked.InvokeAsync()">
            <i class="fe fe-edit" style="color: #00a2b8;">

            </i>
        </button>
    </AuthorizeView>
}
else
{
    <button type="button" class="btn" @onclick="async()=>await Clicked.InvokeAsync()">
        <i class="fe fe-edit" style="color: #00a2b8;">

        </i>
    </button>
}


@code {
    [Parameter] public EventCallback Clicked { get; set; }
    [Parameter] public  string? RoleName { get; set; }

}
